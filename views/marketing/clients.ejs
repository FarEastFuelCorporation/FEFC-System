<!-- views/marketing/clients.ejs -->

<div class="content">
    <div class="col-xs-12">
        <!-- client_list -->
        <section class="marketing" id="client_list_section">
            <h4>CLIENTS</h4><br>
            <div>
                <label class="d-flex gap-3">
                    <a href="/dashboard/clients/new">
                        <button type="button" id="new_employee_button" class="form-control fw-bold bg-success text-white">
                            <h6>NEW CLIENT FORM</h6>
                        </button>
                    </a>
                    <button type="button" id="update_record_button" class="form-control fw-bold bg-danger text-white">
                        <h6>UPDATE CLIENT FORM</h6>
                    </button>
                </label>
            </div>
            <div class="container-fluid">
                <div class="table-container">
                    <!-- Table Header -->
                    <div class="table-header">
                        <div class="form-group d-flex">
                            <label for="showEntries">Show entries</label>
                            <select class="form-control" id="showEntries" onchange="changeEntriesPerPage(this)">
                                <option value="10" <%= entriesPerPage === 10 ? 'selected' : '' %>>10</option>
                                <option value="25" <%= entriesPerPage === 25 ? 'selected' : '' %>>25</option>
                                <option value="50" <%= entriesPerPage === 50 ? 'selected' : '' %>>50</option>
                                <option value="100" <%= entriesPerPage === 100 ? 'selected' : '' %>>100</option>
                            </select>
                        </div>
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" placeholder="Search Client" id="searchInput" value="<%= searchQuery %>">
                            <button class="btn btn-primary" onclick="performSearch()">Search</button>
                        </div>
                    </div>
            
                    <!-- Table -->
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>CLIENT ID</th>
                            <th>CLIENT</th>
                            <th>ADDRESS</th>
                            <th>NATURE OF BUSINESS</th>
                            <th>CONTACT NUMBER</th>
                            <th>BILLER NAME</th>
                            <th>BILLER ADDRESS</th>
                            <th>BILLER CONTACT PERSON</th>
                            <th>BILLER CONTACT NUMBER</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% const startIndex = (currentPage - 1) * entriesPerPage; %>
                        <% clients.forEach((client, index) => { %>
                            <tr>
                                <td><%= startIndex + index + 1 %></td>
                                <td><%= client.clientId %></td>
                                <td><%= client.clientName %></td>
                                <td><%= client.address %></td>
                                <td><%= client.natureOfBusiness %></td>
                                <td><%= client.contactNumber %></td>
                                <td><%= client.billerName %></td>
                                <td><%= client.billerAddress %></td>
                                <td><%= client.billerContactPerson %></td>
                                <td><%= client.billerContactNumber %></td>
                                <!-- Add more cells for other fields -->
                            </tr>
                        <% }); %>
                        </tbody>
                    </table>
            
                    <!-- Pagination -->
                    <div class="table-pagination">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-end">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="changePage(<%= currentPage - 1 %>)" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                <% } %>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="#" onclick="changePage(<%= i %>)"><%= i %></a>
                                    </li>
                                <% } %>
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="changePage(<%= currentPage + 1 %>)" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
            
        </section>
    </div>
</div>
