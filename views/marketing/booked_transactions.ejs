                        <div class="row mb-3">
                            <div class="col">
                                <label for="remarks">
                                    <i class="fa-brands fa-rocketchat"></i>
                                    Remarks
                                </label><br>
                                <input class="form-control" autocapitalize="words" autocomplete="off" name="remarks" id="remarks" type="text" placeholder="Type your Remarks">        
                            </div>
                        </div>
