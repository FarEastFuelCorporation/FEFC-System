                                    <option value="1">HAZARDOUS WASTE</option>
                                    <option value="2">NON-HAZARDOUS WASTE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3 gap-3" id="documentContainer" style="display: none;"></div>
