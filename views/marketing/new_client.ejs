<!-- views/marketing/new_client.ejs -->

<div class="content">
    <div class="col-xs-12">
        <!-- client_list -->
        <section class="marketing" id="client_list_section">
            <h4>CLIENTS</h4><br>
            <div id="new_client_form_tab">
                <h5>NEW CLIENT FORM</h5><br>
                <form id="newClientForm" action="/dashboard/clients/new" method="post">
                    <label for="clientName">
                        <i class="fa-solid fa-user"></i>
                        Client
                        </label><br>
                    <input type="text" name="clientName" id="clientName" autocomplete="off" class="form-control" required placeholder="Input Client's Name..."><br>
                    <label for="address">
                        <i class="fa-solid fa-house-user"></i>
                        Address
                    </label><br>
                    <input type="text" name="address" id="address" autocomplete="off" class="form-control" required placeholder="Input Client's Address..."><br>
                    <label for="natureOfBusiness">
                        <i class="fa-solid fa-table-list"></i>
                        Nature of Business
                    </label><br>
                    <input type="text" name="natureOfBusiness" id="natureOfBusiness" autocomplete="off" class="form-control" required placeholder="Input Client's Nature of Business..."><br>
                    <label for="contactNumber">
                        <i class="fa-solid fa-square-phone"></i>
                        Contact Number
                    </label><br>
                    <input type="text" name="contactNumber" id="contactNumber" autocomplete="off" class="form-control" required placeholder="Input Client's Contact Number..."><br>
                    <label for="billerName">
                        <i class="fa-solid fa-user"></i>
                        Biller Name
                        </label><br>
                    <input type="text" name="billerName" id="billerName" autocomplete="off" class="form-control" required placeholder="Input Biller's Name..."><br>
                    <label for="billerAddress">
                        <i class="fa-solid fa-house-user"></i>
                        Biller Address
                    </label><br>
                    <input type="text" name="billerAddress" id="billerAddress" autocomplete="off" class="form-control" required placeholder="Input Biller's Address..."><br>
                    <label for="billerContactPerson">
                        <i class="fa-solid fa-square-phone"></i>
                        Biller Contact Person
                    </label><br>
                    <input type="text" name="billerContactPerson" id="billerContactPerson" autocomplete="off" class="form-control" required placeholder="Input Biller's Contact Person..."><br>    
                    <label for="billerContactNumber">
                        <i class="fa-solid fa-square-phone"></i>
                        Biller Contact Number
                    </label><br>
                    <input type="text" name="billerContactNumber" id="billerContactNumber" autocomplete="off" class="form-control" required placeholder="Input Biller's Contact Number..."><br>
                    <div class="buttons">
                        <button type="submit" id="submit_btn" class="btn btn-success">
                            Submit
                        </button>
                        <button type="reset" id="reset" class="btn btn-danger">
                            Clear
                        </button>
                    </div>    
                </form>
            </div>
            
        </section>
    </div>
</div>
